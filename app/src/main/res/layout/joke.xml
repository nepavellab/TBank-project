<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/peach"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <ImageButton
        android:id="@+id/ibFavourite"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="end"
        android:src="@drawable/not_favor_icon"/>

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="50dp"
        android:textAlignment="textStart"
        android:textColor="@color/cream"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvLoadType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@color/cream"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/question_icon"/>

    <TextView
        android:id="@+id/tvJokeQuestion"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="80dp"
        android:maxLines="1"
        android:background="@drawable/qa_wrapped"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="@color/matte_black"
        android:fontFamily="monospace"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="Question" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/smile_icon"
        android:layout_marginTop="125dp"/>

    <TextView
        android:id="@+id/tvJokeAnswer"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:fontFamily="monospace"
        android:textSize="13sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/qa_wrapped"
        android:gravity="center_vertical"
        android:textColor="@color/matte_black"
        android:textStyle="bold"
        tools:text="Answer" />

</androidx.cardview.widget.CardView>